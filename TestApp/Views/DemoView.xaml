<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Views.DemoView"
             Title="DemoView">
    <Grid RowDefinitions="50,50,50,30,*">
        <Button Text="Save data"
            Command="{Binding SaveCommand}"
            Grid.Row="0"/>
        <Button Text="Read data"
            Command="{Binding ReadCommand}"
            Grid.Row="1"/>
        <Button Text="Clear database"
            Command="{Binding ClearDBCommand}"
            Grid.Row="2"/>

        <Label Text="Models:" FontAttributes="Bold" Margin="0,10,0,0" Grid.Row="3"/>

        <ListView ItemsSource="{Binding Models}"
                  Grid.Row="4"
                  Margin="0,10,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>